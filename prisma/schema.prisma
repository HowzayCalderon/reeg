generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique
  student   Student?
  teacher   Teacher?
}

model Teacher {
  id        Int     @id @default(autoincrement())
  classlist Class[]
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id])
}

model Student {
  id         Int     @id @default(autoincrement())
  userId     Int     @unique
  user       User    @relation(fields: [userId], references: [id])
  gradelevel Int
  Class      Class[]
  classId    Int?
}

model Class {
  id        Int       @id
  classname String
  students  Student[]
  Teacher   Teacher?  @relation(fields: [teacherId], references: [id])
  teacherId Int?
}
